daemon off;
worker_processes <%= ENV['NGINX_WORKERS'] %>;
pid /app/nginx.pid;
error_log stderr;

events {
    use epoll;
    accept_mutex on;
    worker_connections 1024;
}

http {
    <% if ENV['NGINX_GZIP_ENABLED'] == '1' %>
    gzip on;
    gzip_disable msie6;
    gzip_min_length 512;
    gzip_proxied <%= ENV['NGINX_GZIP_PROXIED'] %>;
    gzip_types <%= ENV['NGINX_GZIP_TYPES'] %>;
    <% end %>

    log_format l2met 'measure#nginx.service=$request_time request_id=$http_x_request_id';
    access_log error l2met;

    include mime.types;
    default_type application/octet-stream;
    sendfile on;

    server {
        listen <%= ENV['NGINX_LISTEN'] %>;
        server_name _;
        keepalive_timeout 5;

        location / {
            root /app/dist;
            tcp_nopush on;
        }
    }

    include config/nginx-local*.conf;
}
